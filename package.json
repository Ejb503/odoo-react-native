    "@react-navigation/native": "6.1.7",
    "@react-navigation/native-stack": "6.9.13",
    "@reduxjs/toolkit": "1.9.5",
    "dotenv": "^16.4.7",
    "expo": "~49.0.15",
    "expo-status-bar": "~1.6.0",
    "metro": "0.76.7",
    "metro-core": "0.76.7",
    "metro-runtime": "0.76.7",
    "node-fetch": "^2.7.0",
    "react": "18.2.0",
