{
  "name": "odoo-react-native",
  "version": "1.0.0",
  "description": "React Native app for Odoo integration with MCP SDK featuring a modern, futuristic design",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "npx expo start",
    "start-tunnel": "npx expo start --tunnel",
    "start-clear": "npx expo start -c",
    "start-go": "npx expo start --go",
    "start-go-tunnel": "npx expo start --go --tunnel",
    "android": "npx expo run:android",
    "ios": "npx expo run:ios",
    "web": "npx expo start --web",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clear-cache": "rm -rf node_modules/.cache && npx expo start -c"
  },
  "keywords": [
    "odoo",
    "react-native",
    "mcp",
    "voice-interface",
    "animations",
    "dark-theme",
    "glassmorphism"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
    "@expo/ngrok": "^4.1.3",
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@reduxjs/toolkit": "1.9.7",
    "@shopify/react-native-skia": "1.5.0",
    "dotenv": "^16.4.7",
    "expo": "~52.0.36",
    "expo-linear-gradient": "~14.0.2",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.8",
    "getenv": "^1.0.0",
    "metro": "^0.81.3",
    "metro-core": "^0.81.3",
    "metro-runtime": "^0.81.3",
    "metro-source-map": "^0.81.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-freeze": "^1.0.3",
    "react-native": "0.76.7",
    "react-native-paper": "^5.12.3",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "15.8.0",
    "react-native-web": "~0.19.13",
    "react-redux": "8.1.3",
    "socket.io-client": "^4.7.4",
    "@expo/metro-config": "~0.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.3",
    "@types/react": "~18.3.12",
    "jest": "^29.6.2",
    "jest-expo": "~52.0.5",
    "typescript": "^5.3.0"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  }
}
